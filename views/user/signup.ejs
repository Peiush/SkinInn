<%- layout("layouts/boilerplate") %>

<body>
    <div class="col-md-6 offset-md-3 mt-5">
        <strong><h1 class="text-center new-title">Sign Up</h1></strong>
        <p class="text-center new-subtitle">Create your account to start shopping!</p>
    </div>

    <div class="col-md-6 offset-3 p-3 editt-box mt-4">
        <form action="/signup" method="post" novalidate class="needs-validation">
            <div class="ms-3 me-3">
                <label for="username" class="form-label mt-3">Username</label>
                <input type="text" name="username" id="username" placeholder="Enter Username" class="form-control" required>
            </div>

            <div class="ms-3 me-3">
                <label for="email" class="form-label mt-3">Email</label>
                <input type="email" name="email" id="email" placeholder="Enter Email" class="form-control" required>
            </div>

            <div class="ms-3 me-3">
                <label for="password" class="form-label mt-3">Password</label>
                <input type="password" name="password" id="password" placeholder="Enter Password" class="form-control" required>
            </div>

            <button type="submit" class="btn btn-primary mt-4 ms-3 mb-3">Sign Up</button>
        </form>
    </div>

    <div class="text-center mt-3">
        <p>Already have an account? <a href="/login">Login</a></p>
    </div>
</body>
